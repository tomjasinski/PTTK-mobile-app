<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoRejestracjiActivity">

    <TextView
        android:id="@+id/tv_info_po_rejestracji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/info"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_zaloguj_sie_po_rejestracji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_info_po_rejestracji"
        android:onClick="openZalogujActivityPoRejestracji"
        android:text="@string/zaloguj" />

</RelativeLayout>